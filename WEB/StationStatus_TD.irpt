        var alertBtn = false;

        function buttonToggle() {

            if (alertBtn == false) {
                var url = "/XMII/Illuminator?QueryTemplate=MESM/STATIONS_HMI/QUERIES/alertOpen&Param.1=" + UnitID + "&Content-Type=text/xml";
                getData(url, parseJsonParent);
                function parseJsonParent(jsondata) {
                    alertBtn = true;
