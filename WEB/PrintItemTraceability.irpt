	</style>

	<script id="sap-ui-bootstrap"
		src="/sapui5/resources/sap-ui-core.js"
		data-sap-ui-theme="sap_goldreflection"
		data-sap-ui-libs="sap.ui.core,sap.ui.commons,sap.ui.table"
		data-sap-ui-language="en" >
	</script>

	<script type="text/javascript" src="Common/js/default.js"></script>

<script type="text/javascript" id="app-init">

	// Get Core SAP UI5
	var oCore = sap.ui.getCore();

	var plantID = 0;
	var lineID = 0;
	var selectedSerialNumberValue = '';

	// ****************************************************************************************************************************************************

	function createHTMLPage (){

		selectedSerialNumberValue = selectedSerialNumber.value;

		// alert(selectedSerialNumberValue)
		
		buildTableItemTraceability();
	}

	// ******************************************************************************************************************************************************************
	function buildTableItemTraceability() {
		var Server_SQL = "";
		var QueryTitle = "ITEM TRACEABILITY";
		var d = new Date();
		var date = [ d.getFullYear(), d.getMonth() + 1, d.getDate() ]; 
		var time = [ d.getHours(), d.getMinutes(), d.getSeconds() ];
		for ( var i = 1; i < 3; i++ ) { 
		     if ( date[i] < 10 ) { 
		       date[i] = "0" + date[i]; 
		     } 
		}
		for ( var i = 1; i < 3; i++ ) { 
		     if ( time[i] < 10 ) { 
		       time[i] = "0" + time[i]; 
		     } 
		} 

		var dateStr = date.join("-")  + " " + time.join(":");

		var timestamp = new Date().getTime();

		document.getElementById("list").innerHTML = "<img src='Common/img/pls_wait.gif' alt='wait ..' />";

		var stringHTML = "";

		var serialNumber = "";
		var notifTagValue = "";
		var operationName = "";
		var CreatedOn = "";

		var bgColor = "#efefef";

		var tableHTML = "";

		var Param1 = selectedSerialNumberValue;
	
		var paramStr = "Param.1="+encodeURIComponent(Param1);
		// alert(paramStr);		
 		getData("/XMII/Illuminator?QueryTemplate=MESM/REPORTS/QUERIES/get_PCoNotificationsItemData&"+paramStr+"&ts="+timestamp+"&Content-Type=text/xml", parseJsonItemTraceabilityData);
				
		function parseJsonItemTraceabilityData(jsondata){
			tableHTML = tableHTML + "<table id=\"top-hdr\" cellspacing=0 cellpadding=10 border=0 align=center width=1030 style=\"margin-top:0px;font-family: Arial;\"><tr style=\"border-top:2px solid #666;margin-top:0px;background-color:#ffffff;\"><td colspan=4 style=\"font-size:28px;font-weight:bold;color: #007dc0;text-align:center\">" + "ITEM DATA" + "</td></tr><tr style=\"font-size:11px;font-weight:bold;border-top:2px solid #666;margin-top:0px;background-color:#cfcfcf;\">";
			tableHTML = tableHTML + "<td style=\"width:100px; text-align:center;\">Serial #</td>";
			tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">Test</td>";
			tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">Operation</td>";
			tableHTML = tableHTML + "<td style=\"width:120px; text-align:center;\">Created</td></tr></table>";
							
	
			for (var i=0; i<jsondata.length; i++){

				serialNumber = jsondata[i]['serialNumber'];
				notifTagValue = jsondata[i]['notifTagValue'];
				operationName = jsondata[i]['operationName'];
				CreatedOn = jsondata[i]['CreatedOn'];
				
				if (i==0) {
					tableHTML = tableHTML + "<table id=\"data-val" + i + "\" cellspacing=0 cellpadding=4 border=0 align=center width=1030 style=\"border-top:2px solid #666;margin-top:0px; font-size:11px;font-family: Arial;\">";
					tableHTML = tableHTML + "<tr style=\"background-color:" + bgColor + ";\">";
					tableHTML = tableHTML + "<td style=\"width:100px; text-align:center;\">" + serialNumber + "</td>";
					tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + notifTagValue + "</td>";
					tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + operationName + " </td>";
					tableHTML = tableHTML + "<td style=\"width:120px; text-align:center;\">" + CreatedOn + " </td></tr></table>"; 
				}

				if (i!=0) {
					if (i==jsondata.length-1) {
						tableHTML = tableHTML +  "<table id=\"data-val" + i + "\" cellspacing=0 cellpadding=4 border=0 align=center width=1030 style=\"border-bottom: 2px solid #666; margin-top:0px; font-size:11px; font-family: Arial;\">";
						tableHTML = tableHTML + "<tr style=\"background-color:" + bgColor + ";\">";
						tableHTML = tableHTML + "<td style=\"width:100px; text-align:center;\">" + serialNumber + "</td>";
						tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + notifTagValue + "</td>";
						tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + operationName + " </td>";
						tableHTML = tableHTML + "<td style=\"width:120px; text-align:center;\">" + CreatedOn + " </td></tr></table>"; 
					}
					else {
						tableHTML = tableHTML + "<table id=\"data-val" + i + "\" cellspacing=0 cellpadding=4 border=0 align=center width=1030 style=\"border-bottom: 0px solid #666; margin-top:0px; font-size:11px; font-family: Arial;\">";
						tableHTML = tableHTML + "<tr style=\"background-color:" + bgColor + ";\">";
						tableHTML = tableHTML + "<td style=\"width:100px; text-align:center;\">" + serialNumber + "</td>";
						tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + notifTagValue + "</td>";
						tableHTML = tableHTML + "<td style=\"width:80px; text-align:center;\">" + operationName + " </td>";
						tableHTML = tableHTML + "<td style=\"width:120px; text-align:center;\">" + CreatedOn + " </td></tr></table>"; 
					}
				}
				if(bgColor=="#efefef") { bgColor = "#ffffff"; } else { bgColor = "#efefef"; }
			}
			stringHTML = stringHTML + tableHTML;
			document.getElementById("list").innerHTML = stringHTML;	

			window.print(); 	
		}
	}

	// ******************************************************************************************************************************************************************

</script>
</head>

<body onLoad="createHTMLPage();">
<input id="selectedSerialNumber" type="hidden"  value="{Param.1}" style="display:none" readonly />
<div id="list" style="text-align: center;"></div>
</body>
</html>
